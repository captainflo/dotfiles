# Unix
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"
alias e="$EDITOR"
alias v="$VISUAL"

# git
alias gci="git pull --rebase && rake && git push"

# Bundler
alias b="bundle"

# Tests and Specs
alias t="ruby -I test"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate"
alias m="migrate"
alias rk="rake"
alias s="rspec"
alias acp="RAILS_ENV=production rake assets:clean assets:precompile"
alias rpow="touch ~/.pow/restart.txt"

# Mysql
alias sqlstart="mysql.server start"
alias sqlstop="mysql.server stop"

# Elasticsearch
alias elastic="elasticsearch --config=/usr/local/opt/elasticsearch/config/elasticsearch.yml"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local

# Goodies
alias meteo="curl -4 http://wttr.in/Bordeaux"
